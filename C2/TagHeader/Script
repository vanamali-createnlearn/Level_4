--Enter these lines in the tag script after the line "local TAG_COOLDOWN = 2"

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local tagBillboard = ReplicatedStorage:WaitForChild("TagBillboard")
local function setTaggerBillboard(newTagger)
	if newTagger and newTagger.Character then
		local hrp = newTagger.Character:FindFirstChild("HumanoidRootPart")
		if hrp then
			tagBillboard.Adornee = hrp
			tagBillboard.Parent = workspace -- keep billboard in workspace
		end
	end
end

--add this line at the end of if block in assignTagger() function
setTaggerBillboard(tagger)

--replace last three lines of handleTouch() with this
tagger = targetPlayer
setTaggerBillboard(tagger) 
lastTagTime = now
